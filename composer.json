{
  "name": "spark/core",
  "description": "The core of Spark",
  "license": "LGPL-2.1-or-later",
  "type": "library",
  "require": {
    "composer/composer": "^2.6",
    "laminas/laminas-httphandlerrunner": "^2.9",
    "nulldark/container": "^0.4.0",
    "nulldark/routing": "^2.1",
    "nulldark/stdlib": "^2.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "psr/cache": "^3.0",
    "psr/log": "^3.0",
    "ext-apcu": "*"
  },
  "require-dev": {
    "mockery/mockery": "2.0.x-dev",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-mockery": "^1.1",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpunit/phpunit": "^10.4",
    "psalm/plugin-phpunit": "^0.18.4",
    "slevomat/coding-standard": "^8.14",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.15"
  },
  "minimum-stability": "alpha",
  "autoload": {
    "psr-4": {
      "Spark\\": "lib/Spark"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spark\\Tests\\Unit\\": "tests/Unit"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "analyze": [
      "@analyze:phpstan",
      "@analyze:psalm"
    ],
    "analyze:phpstan": "phpstan analyze --ansi --memory-limit=1G",
    "analyze:psalm": "psalm",
    "build:clean": "git clean -fX .build/.",
    "build:clean:cache": "git clean -fX .build/cache/.",
    "build:clean:coverage": "git clean -fX .build/coverage/.",
    "dev:checks": [
      "@lint",
      "@analyze",
      "@test"
    ],
    "lint": [
      "@lint:fix",
      "@lint:style"
    ],
    "lint:fix": "phpcbf",
    "lint:style": "phpcs",
    "test": [
      "@test:unit"
    ],
    "test:unit": "phpunit --testsuite units",
    "test:coverage:ci": "phpunit --colors=always --coverage-text --coverage-xml .build/coverage/coverage-xml tests",
    "test:coverage:html": "phpunit --colors=always --coverage-html .build/coverage/coverage-html tests"
  }
}
